{
  "name": "audit-browser",
  "version": "1.0.0",
  "description": "Browse and filter software audit definitions",
  "type": "module",
  "scripts": {
    "generate-data": "node scripts/generate-data.js",
    "dev": "npm run generate-data && vite dev",
    "build": "npm run generate-data && vite build",
    "build:static": "npm run generate-data && BUILD_MODE=static vite build",
    "build:gh-pages": "npm run generate-data && BUILD_MODE=static vite build && cp build/index.html build/404.html",
    "preview": "vite preview",
    "preview:static": "npx serve build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "marked": "^17.0.1",
    "minisearch": "^7.2.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.15.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/postcss": "^4.1.0",
    "@tailwindcss/vite": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.0",
    "svelte": "^5.16.0",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.6"
  }
}
