{
  "category": {
    "id": "INT",
    "name": "Integration",
    "description": "Integration audit dimensions covering API contracts, data exchange, E2E flows, and third-party integrations"
  },
  "audits": [
    {
      "id": "INT-001",
      "name": "E2E flow coverage",
      "description": "Verify all user flows are tested end-to-end",
      "severity": "critical",
      "scope": ["integration"],
      "automatable": "partial",
      "checklist": [
        "All user journeys identified",
        "Happy path flows tested",
        "Error path flows tested",
        "Edge case flows tested",
        "Flow coverage metrics"
      ],
      "evidence_required": ["E2E test results", "Flow coverage report", "Test scenarios"]
    },
    {
      "id": "INT-002",
      "name": "Acceptance criteria validated",
      "description": "Verify all PRD acceptance criteria are met",
      "severity": "critical",
      "scope": ["integration"],
      "automatable": "partial",
      "checklist": [
        "All functional requirements mapped",
        "Each criterion has test evidence",
        "NFRs validated against benchmarks",
        "Traceability matrix complete",
        "Sign-off criteria met"
      ],
      "evidence_required": ["Traceability matrix", "Test results", "Acceptance sign-off"]
    },
    {
      "id": "INT-003",
      "name": "API contracts validated",
      "description": "Verify API contracts match implementation",
      "severity": "critical",
      "scope": ["integration", "code"],
      "automatable": "yes",
      "checklist": [
        "OpenAPI/Swagger spec matches implementation",
        "Request/response schemas validated",
        "Error responses match spec",
        "Versioning implemented correctly",
        "Contract tests passing"
      ],
      "evidence_required": ["Contract test results", "API spec diff", "Schema validation"]
    },
    {
      "id": "INT-004",
      "name": "Data exchange formats verified",
      "description": "Verify data formats between components",
      "severity": "high",
      "scope": ["integration"],
      "automatable": "partial",
      "checklist": [
        "JSON schema validation",
        "Data transformation correctness",
        "Encoding/charset handling",
        "Null/empty value handling",
        "Large payload handling"
      ],
      "evidence_required": ["Schema tests", "Transform tests", "Payload samples"]
    },
    {
      "id": "INT-005",
      "name": "Third-party integrations tested",
      "description": "Verify external service integrations work",
      "severity": "high",
      "scope": ["integration"],
      "automatable": "partial",
      "checklist": [
        "All external APIs tested",
        "Authentication with third parties",
        "Error handling for external failures",
        "Timeout handling",
        "Fallback mechanisms"
      ],
      "evidence_required": ["Integration test results", "Mock vs real tests", "Error scenarios"]
    },
    {
      "id": "INT-006",
      "name": "Data integrity across boundaries",
      "description": "Verify data consistency across system boundaries",
      "severity": "critical",
      "scope": ["integration"],
      "automatable": "partial",
      "checklist": [
        "Data consistency checks",
        "Transaction integrity",
        "Concurrent access handling",
        "Data sync verification",
        "Referential integrity"
      ],
      "evidence_required": ["Integrity tests", "Consistency checks", "Transaction logs"]
    },
    {
      "id": "INT-007",
      "name": "Error recovery tested",
      "description": "Verify system recovers from integration failures",
      "severity": "high",
      "scope": ["integration"],
      "automatable": "partial",
      "checklist": [
        "Network failure recovery",
        "Service unavailability handling",
        "Partial failure scenarios",
        "Retry mechanism verification",
        "Circuit breaker testing"
      ],
      "evidence_required": ["Chaos test results", "Recovery tests", "Failure injection logs"]
    },
    {
      "id": "INT-008",
      "name": "Performance under integration",
      "description": "Verify performance when all components integrated",
      "severity": "high",
      "scope": ["integration"],
      "automatable": "yes",
      "checklist": [
        "Response time under load",
        "Throughput metrics",
        "Resource usage patterns",
        "Bottleneck identification",
        "Scaling behavior"
      ],
      "evidence_required": ["Load test results", "Performance metrics", "Resource graphs"]
    },
    {
      "id": "INT-009",
      "name": "Security at integration points",
      "description": "Verify security between integrated components",
      "severity": "critical",
      "scope": ["integration"],
      "automatable": "partial",
      "checklist": [
        "Inter-service authentication",
        "Data encryption in transit",
        "Access control between services",
        "Injection prevention at boundaries",
        "Security header propagation"
      ],
      "evidence_required": ["Security scan", "Auth tests", "Encryption verification"]
    },
    {
      "id": "INT-010",
      "name": "Deployment readiness",
      "description": "Verify system is ready for deployment",
      "severity": "high",
      "scope": ["integration", "deployment"],
      "automatable": "partial",
      "checklist": [
        "All integration tests passing",
        "Performance targets met",
        "Security requirements satisfied",
        "Documentation complete",
        "Rollback plan verified"
      ],
      "evidence_required": ["Test summary", "Performance report", "Deployment checklist"]
    }
  ]
}
