{
  "category": {
    "id": "SEC",
    "name": "Security",
    "description": "Security audit dimensions covering authentication, authorization, encryption, and vulnerability assessment"
  },
  "audits": [
    {
      "id": "SEC-001",
      "name": "Authentication mechanisms defined",
      "description": "Verify authentication requirements are fully specified",
      "severity": "critical",
      "scope": ["prd", "code", "integration"],
      "automatable": "partial",
      "checklist": [
        "Authentication method specified (OAuth, JWT, session, etc.)",
        "Multi-factor authentication requirements",
        "Password policy defined",
        "Session timeout requirements",
        "Token refresh strategy"
      ],
      "evidence_required": ["PRD auth section", "Auth flow diagram", "Implementation tests"]
    },
    {
      "id": "SEC-002",
      "name": "Authorization model specified",
      "description": "Verify authorization and access control requirements",
      "severity": "critical",
      "scope": ["prd", "code", "integration"],
      "automatable": "partial",
      "checklist": [
        "Role-based access control (RBAC) defined",
        "Permission matrix documented",
        "Resource-level access rules",
        "API endpoint authorization",
        "Admin privilege escalation paths"
      ],
      "evidence_required": ["RBAC matrix", "Permission tests", "Access control implementation"]
    },
    {
      "id": "SEC-003",
      "name": "Data encryption requirements",
      "description": "Verify encryption for data at rest and in transit",
      "severity": "critical",
      "scope": ["prd", "code", "deployment"],
      "automatable": "partial",
      "checklist": [
        "TLS/SSL requirements specified",
        "Data at rest encryption",
        "Key management strategy",
        "Encryption algorithm requirements",
        "Certificate management"
      ],
      "evidence_required": ["Security spec", "TLS configuration", "Encryption tests"]
    },
    {
      "id": "SEC-004",
      "name": "Input validation defined",
      "description": "Verify input validation and sanitization requirements",
      "severity": "critical",
      "scope": ["prd", "code"],
      "automatable": "partial",
      "checklist": [
        "Input validation rules specified",
        "Sanitization approach defined",
        "File upload restrictions",
        "SQL injection prevention",
        "XSS prevention measures"
      ],
      "evidence_required": ["Validation rules", "Security tests", "Code review"]
    },
    {
      "id": "SEC-005",
      "name": "OWASP Top 10 addressed",
      "description": "Verify OWASP Top 10 vulnerabilities are addressed",
      "severity": "critical",
      "scope": ["code", "integration"],
      "automatable": "partial",
      "checklist": [
        "Injection prevention",
        "Broken authentication checks",
        "Sensitive data exposure prevention",
        "XML external entities (XXE)",
        "Broken access control",
        "Security misconfiguration",
        "Cross-site scripting (XSS)",
        "Insecure deserialization",
        "Using components with known vulnerabilities",
        "Insufficient logging and monitoring"
      ],
      "evidence_required": ["Security scan results", "Penetration test", "Code review"]
    },
    {
      "id": "SEC-006",
      "name": "Secrets management specified",
      "description": "Verify secrets and credentials management approach",
      "severity": "high",
      "scope": ["prd", "code", "deployment"],
      "automatable": "partial",
      "checklist": [
        "Secrets storage approach (vault, env vars, etc.)",
        "API key rotation strategy",
        "Credential injection method",
        "No hardcoded secrets",
        "Secret access audit logging"
      ],
      "evidence_required": ["Secrets management doc", "Code scan for secrets", "Vault config"]
    },
    {
      "id": "SEC-007",
      "name": "Audit logging requirements",
      "description": "Verify security audit logging is specified",
      "severity": "high",
      "scope": ["prd", "code", "production"],
      "automatable": "partial",
      "checklist": [
        "Security events to log defined",
        "Log retention policy",
        "Log tamper protection",
        "Alerting on security events",
        "Compliance with regulations"
      ],
      "evidence_required": ["Logging spec", "Log samples", "Alert configuration"]
    },
    {
      "id": "SEC-008",
      "name": "API security measures",
      "description": "Verify API-specific security requirements",
      "severity": "high",
      "scope": ["prd", "code", "integration"],
      "automatable": "partial",
      "checklist": [
        "Rate limiting defined",
        "API authentication required",
        "Request size limits",
        "CORS policy specified",
        "API versioning security"
      ],
      "evidence_required": ["API security spec", "Rate limit tests", "CORS config"]
    },
    {
      "id": "SEC-009",
      "name": "Dependency vulnerability scanning",
      "description": "Verify dependency security scanning is in place",
      "severity": "high",
      "scope": ["code", "deployment"],
      "automatable": "yes",
      "checklist": [
        "Dependency scanning tool configured",
        "Known vulnerability database used",
        "Automated scanning in CI/CD",
        "Remediation process defined",
        "Update policy for dependencies"
      ],
      "evidence_required": ["Scan results", "CI/CD config", "Remediation log"]
    },
    {
      "id": "SEC-010",
      "name": "Security headers configured",
      "description": "Verify HTTP security headers are properly set",
      "severity": "medium",
      "scope": ["code", "deployment"],
      "automatable": "yes",
      "checklist": [
        "Content-Security-Policy",
        "X-Frame-Options",
        "X-Content-Type-Options",
        "Strict-Transport-Security",
        "X-XSS-Protection"
      ],
      "evidence_required": ["Header scan", "Server config", "Browser test"]
    },
    {
      "id": "SEC-011",
      "name": "Session management security",
      "description": "Verify secure session management",
      "severity": "high",
      "scope": ["code", "integration"],
      "automatable": "partial",
      "checklist": [
        "Secure session ID generation",
        "Session fixation prevention",
        "Session timeout handling",
        "Concurrent session limits",
        "Session invalidation on logout"
      ],
      "evidence_required": ["Session tests", "Code review", "Security scan"]
    },
    {
      "id": "SEC-012",
      "name": "Error handling security",
      "description": "Verify errors don't leak sensitive information",
      "severity": "medium",
      "scope": ["code", "integration"],
      "automatable": "partial",
      "checklist": [
        "Generic error messages to users",
        "No stack traces in production",
        "No sensitive data in errors",
        "Error logging without secrets",
        "Consistent error format"
      ],
      "evidence_required": ["Error response samples", "Code review", "Production logs"]
    }
  ]
}
