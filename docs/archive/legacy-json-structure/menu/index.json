  "mode_definitions": {
    "loop-until-pass": "Automatically retry with fixes until all audits pass",
    "gate-all": "Human must approve/reject any audit failure",
    "gate-critical": "Human approval required only for critical severity",
    "gate-high": "Human approval required for high+ severity",
    "gate-medium": "Human approval required for medium+ severity",
    "report-only": "Log all failures but continue (use with caution)"
  },
  "severity_definitions": {
    "critical": "Must be addressed before proceeding - blocks development",
    "high": "Should be addressed - significant risk if ignored",
    "medium": "Recommended to address - improves quality",
    "low": "Optional - nice to have"
  },
  "severity_filter_definitions": {
    "all": "All severity levels (critical, high, medium, low) block progress",
    "critical": "Only critical issues block progress",
    "high+": "Critical and high issues block progress",
    "medium+": "Critical, high, and medium issues block progress"
  },
  "scope_definitions": {
